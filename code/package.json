{
  "name": "feed-the-parrot",
  "version": "1.0.0",
  "description": "RSS feed reader for Alexa",
  "main": "index.js",
  "private": "true",
  "scripts": {
    "clean": "rimraf \"../lambda/!(node_modules)\"",
    "clean-full": "rimraf ../lambda",
    "compile": "tsc --build tsconfig.prod.json --pretty",
    "build:final": "cpy package.json ../lambda && cd ../lambda/",
    "build:install": "npm install --production",
    "analyse": "npm run test:coverage && node analyse.js",
    "test": "jest --silent",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"**/*.ts\"",
    "lint:init": "eslint --init",
    "lint:check": "gts check",
    "lint:clean": "gts clean",
    "lint:fix": "gts fix",
    "build-ci": "echo \"{}\" > src/database/firebaseServiceAccountKey.json && npm run build-no-clean",
    "build-debug": "npm run clean && npm run compile && npm run build:final",
    "build-no-clean": "npm run test && npm run lint:check && npm run compile && npm run build:final && npm run build:install",
    "build": "npm run clean && npm run build-no-clean",
    "rebuild": "npm run clean-full && npm run build-no-clean"
  },
  "author": "algono",
  "license": "ISC",
  "dependencies": {
    "ask-sdk-core": "^2.9.0",
    "ask-sdk-model": "^1.29.0",
    "feedparser": "^2.2.10",
    "firebase-admin": "^9.2.0",
    "html-entities": "^1.3.1",
    "i18next": "^19.4.5",
    "node-fetch": "^2.6.1",
    "striptags": "^3.1.1"
  },
  "devDependencies": {
    "@types/feedparser": "^2.2.3",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.6.3",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "ask-sdk-local-debug": "^1.0.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.8.1",
    "fast-check": "^2.5.0",
    "gts": "^2.0.2",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "2.1.2",
    "rimraf": "^3.0.2",
    "sonarqube-scanner": "^2.7.0",
    "ts-jest": "^26.4.1",
    "ts-mockito": "^2.6.1",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cd .. && (echo $HUSKY_GIT_STDIN | ./code/hooks/pre-commit $HUSKY_GIT_PARAMS)",
      "post-commit": "cd .. && (echo $HUSKY_GIT_STDIN | ./code/hooks/post-commit $HUSKY_GIT_PARAMS)",
      "pre-push": "cd .. && (echo $HUSKY_GIT_STDIN | ./code/hooks/pre-push $HUSKY_GIT_PARAMS)"
    }
  },
  "jestSonar": {
    "reportPath": "sonarqube"
  }
}
