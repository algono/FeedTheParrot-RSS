{
  "name": "feed-the-parrot",
  "version": "1.0.0",
  "description": "RSS feed reader for Alexa",
  "main": "index.js",
  "private": "true",
  "scripts": {
    "clean": "rimraf \"../build/lambda/!(node_modules)\"",
    "clean:lambda": "rimraf ../build/lambda",
    "clean:skill-package": "rimraf ../build/skill-package",
    "clean:full": "rimraf ../build/{lambda,skill-package}",
    "clean:all": "rimraf ../build",
    "compile": "tsc --build tsconfig.prod.json --pretty",
    "build:skill-package": "npm run clean:skill-package && cpy ../skill-package/* ../build/skill-package --parents",
    "build:final": "cpy package.json ../build/lambda",
    "build:install": "npm -C ../build/lambda/ install --production",
    "analyse": "npm run test:coverage && node analyse.js",
    "setup-ci": "echo \"{}\" > src/database/firebaseServiceAccountKey.json",
    "test": "jest --silent",
    "test:coverage": "jest --coverage --silent",
    "test:ci": "npm run setup-ci && npm run test -- --ci",
    "format": "prettier --write \"**/*.ts\"",
    "lint:init": "eslint --init",
    "lint:check": "gts check",
    "lint:clean": "gts clean",
    "lint:fix": "gts fix",
    "build:init": "cd .. && sh ./code/scripts/init-build.sh",
    "build:ci": "npm run setup-ci && npm run build:minimal",
    "build:minimal": "npm run lint:check && npm run compile && npm run build:final",
    "build:full": "npm run clean:full && npm run build:skill-package && npm run build:minimal",
    "build": "npm run clean && npm run build:minimal",
    "rebuild": "npm run clean:full && npm run build:minimal",
    "rebuild:full": "npm run clean:full && npm run build:full"
  },
  "author": "algono",
  "license": "ISC",
  "dependencies": {
    "ask-sdk-core": "^2.10.1",
    "ask-sdk-dynamodb-persistence-adapter": "^2.10.0",
    "ask-sdk-model": "^1.34.0",
    "feedparser": "^2.2.10",
    "firebase-admin": "^9.3.0",
    "html-entities": "^1.3.1",
    "i18next": "^19.8.3",
    "node-fetch": "^2.6.1",
    "striptags": "^3.1.1"
  },
  "devDependencies": {
    "@types/feedparser": "^2.2.3",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "ask-sdk-local-debug": "^1.1.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.12.1",
    "fast-check": "^2.6.0",
    "gts": "^2.0.2",
    "husky": "^4.3.0",
    "jest": "^26.6.2",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "2.1.2",
    "rimraf": "^3.0.2",
    "sonarqube-scanner": "^2.7.0",
    "ts-jest": "^26.4.4",
    "ts-mockito": "^2.6.1",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "commit-msg": "cd .. && (echo $HUSKY_GIT_STDIN | ./code/hooks/commit-msg $HUSKY_GIT_PARAMS)",
      "pre-push": "cd .. && (echo $HUSKY_GIT_STDIN | ./code/hooks/pre-push $HUSKY_GIT_PARAMS)"
    }
  },
  "jestSonar": {
    "reportPath": "sonarqube"
  }
}
